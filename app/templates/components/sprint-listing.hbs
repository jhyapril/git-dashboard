<!-- Sprint Cards-->
<div class="row">
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-primary o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-tasks"></i>
        </div>
        <div class="mr-5">{{sprint.totalpr}} Pull Request</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Average</span>
        <span class="float-right">
                  <i class="fa fa-angle-right"></i>
                </span>
        {{#bs-tooltip placement="bottom"}}You have made 2.8 Pull Request per day{{/bs-tooltip}}
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-warning o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-comments"></i>
        </div>
        <div class="mr-5">{{sprint.totalreview}} Code Reviews</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Average</span>
        <span class="float-right">
                  <i class="fa fa-angle-right"></i>
                </span>
        {{#bs-tooltip placement="bottom"}}You have conducted 4.7 Code Reviews per day{{/bs-tooltip}}
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-success o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-lock"></i>
        </div>
        <div class="mr-5">{{sprint.totalmerge}} Successful Merges</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Average</span>
        <span class="float-right">
                  <i class="fa fa-angle-right"></i>
                </span>
        {{#bs-tooltip placement="top"}}You have made 2.2 Successful Merges per day{{/bs-tooltip}}
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-danger o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-bug"></i>
        </div>
        <div class="mr-5">{{sprint.totalfailure}} Build Failures</div>
      </div>
      <a class="card-footer text-white clearfix small z-1" href="#">
        <span class="float-left">View Average</span>
        <span class="float-right">
                  <i class="fa fa-angle-right"></i>
                </span>
        {{#bs-tooltip placement="top"}}You have committed 0.0 Build Failures per day{{/bs-tooltip}}
      </a>
    </div>
  </div>
</div>