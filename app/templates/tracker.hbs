<div class="content-wrapper">
  <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">My Dashboard</li>
    </ol>
    {{#each model as |tracker|}}
      <div {{action "show" tracker}}>show</div>
      {{sprint-listing sprint = tracker}}
      {{daily-git-input
        sprint = tracker
        pr = pr
        review = review
        merge = merge
        failure = failure
      }}
      <button type="button" class="submit-git-input btn btn-primary btn-lg btn-block" {{action "saveInput" }}>
        Call it a day <i class="fa fa-smoking"></i>
      </button>
      {{#bs-modal-simple open=modal1 title="TIME TO GO HOME!" size="large" onHidden=(action (mut modal1) false)}}
        <i class="fab fa-jenkins"></i> Saved Successfully! <i class="fab fa-jenkins"></i>
      {{/bs-modal-simple}}

      {{day-dashboard
        sprint = tracker
        pr = pr
        review = review
        merge = merge
        failure = failure
      }}
    {{/each}}


    <br>
    <div class="area-graph mb-3">
      <div class="card-header">
        <i class="fa fa-chart-area"></i> Sprint Rating
      </div>
      <div class="card-body">
        <!--<canvas id="myAreaChart" width="100%" height="500"></canvas>-->
        <img src="/assets/images/AreaChart.png" width="100%" height="500">
      </div>
      <div class="card-footer small text-muted">Updated yesterday at 6:27 PM</div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <!-- Example Bar Chart Card-->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-chart-bar"></i> Overall Stats
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-sm-8 my-auto">
                <!--<canvas id="myBarChart" width="100" height="50"></canvas>-->
                <img src="/assets/images/BarChart.png" width="100%" height="500">
              </div>
              <div class="col-sm-4 text-center my-auto">
                <div class="h4 mb-0 text-warning">146</div>
                <div class="small text-muted">Tasks</div>
                <hr>
                <div class="h4 mb-0 text-primary">123</div>
                <div class="small text-muted">Pull Request</div>
                <hr>
                <div class="h4 mb-0 text-success">121</div>
                <div class="small text-muted">Successful Merges</div>
                <hr>
                <div class="h4 mb-0 text-Info">189</div>
                <div class="small text-muted">Code Reviews</div>
                <hr>
                <div class="h4 mb-0 text-danger">5</div>
                <div class="small text-muted">Jenkins Build Failures</div>
              </div>
            </div>
          </div>
          <div class="card-footer small text-muted">Updated yesterday at 6:27 PM</div>
        </div>

      </div>

      <div class="col-lg-4">
        <!-- Example Pie Chart Card-->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-pie-chart"></i>Pie Chart</div>
          <div class="card-body">
            In Progress.
          </div>
          <div class="card-footer small text-muted"></div>
        </div>
      </div>
    </div>


    <!--End Fluid-->
  </div>
</div>
